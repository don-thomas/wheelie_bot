<?xml version="1.0"?>
<!-- Wheelie Bot URDF -->
<robot name="Wheelie Bot">


  <!-- Material Colours -->
  <material name="blue">
    <color rgba="0 0 0.8 1" />
  </material>

  <material name="black">
    <color rgba="0 0 0.0 1" />
  </material>

  <material name="white">
    <color rgba="1 1 1 1" />
  </material>


  <!-- Empty Botton Link -->
  <link name="base_bottom"></link>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="1 1 0.1" />
      </geometry>
      <material name="blue" />
    </visual>
    <collision>
      <geometry>
        <box size="1 1 0.2" />
      </geometry>
    </collision>
    <inertial>
      <mass value="10" />
      <inertia ixx="0.4" ixy="0.0" ixz="0.0" iyy="0.4" iyz="0.0" izz="0.2" />
    </inertial>
  </link>

  <joint name="base_bottom_to_link" type="fixed">
    <parent link="base_bottom" />
    <child link="base_link" />
    <origin xyz="0 0 0.25" />
  </joint>


  <!-- Rear Right Wheel Setup -->
  <link name="rear_right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.25" />
      </geometry>
      <material name="black" />
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.25" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1" />
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01" />
    </inertial>
  </link>

  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link" />
    <child link="rear_right_wheel" />
    <origin xyz="-0.4 -0.6 0" rpy="1.57075 0 0" />
    <axis xyz="0 0 -1" />
    <calibration rising="0.0" />
    <dynamics damping="0.0" friction="0.05" />
    <limit effort="30" velocity="10.0"/>
    <safety_controller k_velocity="10" k_position="15" soft_lower_limit="-2.0" soft_upper_limit="0.5" />
  </joint>

  <gazebo reference="rear_right_wheel">
    <mu1 value="200.0" />
    <mu2 value="100.0" />
    <kp value="10000000.0" />
    <kd value="1.0" />
    <material>Gazebo/Grey</material>
  </gazebo>

  <transmission name="rear_right_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="rear_right_wheel_joint">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="rear_right_wheel_motor">
      <mechanicalReduction>1</mechanicalReduction>
      <!-- <hardwareInterface>EffortJointInterface</hardwareInterface> -->
    </actuator>
  </transmission>


  <!-- Rear Left Wheel Setup -->
  <link name="rear_left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.25" />
      </geometry>
      <material name="black" />
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.25" />
      </geometry>
    </collision>
    <!-- <inertial>
      <mass value="100" />
      <inertia ixx="1.01" ixy="2.0" ixz="1.2" iyy="0.01" iyz="0.0" izz="1.01" />
    </inertial> -->

    <inertial>
      <mass value="1" />
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01" />
    </inertial>
  </link>

  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base_link" />
    <child link="rear_left_wheel" />
    <origin xyz="-0.4 0.6 0" rpy="-1.57075 0 0" />
    <axis xyz="0 0 1" />
    <calibration rising="0.0" />
    <dynamics damping="0.0" friction="0.05" />
    <limit effort="30" velocity="10.0"/>
    <safety_controller k_velocity="10" k_position="15" soft_lower_limit="-2.0" soft_upper_limit="0.5" />
  </joint>

  <gazebo reference="rear_left_wheel">
    <mu1 value="200.0" />
    <mu2 value="100.0" />
    <kp value="10000000.0" />
    <kd value="1.0" />
    <material>Gazebo/Grey</material>
  </gazebo>

  <transmission name="rear_left_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="rear_left_wheel_joint">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="rear_left_wheel_motor">
      <mechanicalReduction>1</mechanicalReduction>
      <!-- <hardwareInterface>EffortJointInterface</hardwareInterface> -->
    </actuator>
  </transmission>


  <!-- Front Caster Setup -->
  <link name="front_caster">
    <visual>
      <geometry>
        <box size="0.05 0.5 0.02" />
      </geometry>
      <material name="black" />
    </visual>
    <collision>
      <geometry>
        <box size="0.05 1.25 0.02" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1" />
      <inertia ixx="0.2" ixy="0.0" ixz="0.0" iyy="0.2" iyz="0.0" izz="0.1" />
    </inertial>
  </link>

  <joint name="front_caster_joint" type="continuous">
    <parent link="base_link" />
    <child link="front_caster" />
    <origin xyz="0.4 0 -0.09" rpy="0 0 0" />
    <axis xyz="0 0 1" />
    <calibration rising="0.0" />
    <dynamics damping="0.0" friction="0.00" />
    <limit effort="30" velocity="1.0" lower="-2.2" upper="0.7" />
    <safety_controller k_velocity="10" k_position="15" soft_lower_limit="-2.0" soft_upper_limit="0.5" />
  </joint>


  <!-- Front Caster Wheel Setup -->
  <link name="front_caster_wheel">
    <visual>
      <geometry>
        <cylinder length="0.5" radius="0.065" />
      </geometry>
      <material name="white" />
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.065" />
      </geometry>
    </collision>
    <inertial>
      <mass value="5" />
      <inertia ixx="0.2" ixy="0.0" ixz="0.0" iyy="0.2" iyz="0.0" izz="0.01" />
    </inertial>
  </link>

  <joint name="front_caster_wheel_joint" type="continuous">
    <parent link="front_caster" />
    <child link="front_caster_wheel" />
    <origin xyz="0.0 -0 -0.095" rpy="1.57075 0 0" />
    <axis xyz="0 0 -1" />
    <calibration rising="0.0" />
    <dynamics damping="0.0" friction="0.05" />
    <limit effort="30" velocity="1.0" lower="-2.2" upper="0.7" />
    <safety_controller k_velocity="10" k_position="15" soft_lower_limit="-2.0" soft_upper_limit="0.5" />
  </joint>

  <gazebo reference="front_caster_wheel">
    <mu1 value="1" />
    <mu2 value="1" />
    <kp value="10000000.0" />
    <kd value="1.0" />
    <material>Gazebo/Grey</material>
  </gazebo>

  <!-- <transmission name="front_caster_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="front_caster_joint">
      <hardwareInterface>EffortJointInterface </hardwareInterface>
    </joint>
  </transmission> -->


  <!-- Gazebo plugin for ROS Control -->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/</robotNamespace>
    </plugin>
  </gazebo>

</robot>
